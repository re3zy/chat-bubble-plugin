  "version": "1.0.0",
  "type": "module",
  "description": "A chat interface plugin for Sigma Computing to visualize natural language workflows",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
